import @syscall;
import @util::cstr as CStr;

module IO is Exported{

    stdin  : int = 0;
    stdout : int = 1;
    stderr : int = 2;
    
    func strlen(str:c_str)->i64{
        let i:i64 = 0;
        while(str[i] != 0){
            i++;
        }
        return i;
    }

    func putc(ch:char){
        syscall::write(stdout, cast(<i64>)(&ch), 1);
    }
    func print(message:c_str)->i64{
        let len = syscall::write(
            stdout, 
            cast(<i64>)(message), 
            CStr::len(message)
        );
        return len;
    }
    func println(message:c_str) -> i64{
        let len = IO::print(message);
        IO::putc(10);
        return len+1;
    }
}